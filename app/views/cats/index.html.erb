<% @cats.each do |cat| %>
  <ul>
    <li>name: <%= cat.name.capitalize %></li>
    <li>birth_date: <%= cat.birth_date %></li>
    <li>age: <%= cat.age %></li>
    <li>color: <%= cat.color %></li>
    <li>sex: <%= cat.sex %></li>
    <li>description: <%= cat.description %></li>
  </ul>
  <%= link_to "This #{cat.name.capitalize}'s Profile", cat_url(cat) %>
<% end %>
